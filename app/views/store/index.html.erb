<h1>Outer Persona!</h1>

<% @products.each do |product| %>
<div class="contain">
  <section class="product">
    <h3><%= product.name %></h3>
    <div>
      <%= image_tag product.image, :width => '250' %>
    </div>
    <div class="description">
      <%= product.description %>
    </div>
    <p class="price">
      <%= product.price %>
    </p>
  </section>
</div>
<% end %>
