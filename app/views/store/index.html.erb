
<div class="contain">
<% @products.each do |product| %>
  <section class="product">
    <h3><%= link_to product.name, store_product_path(product)  %></h3>
    <div>
      <%= image_tag product.image, :width => '250' %>
    </div>
    <div class="description">
      <%= product.description %>
    </div>
    <p class="price">
      <%= product.price %>
    </p>
  </section>
<% end %>
</div>