  <section class="productshow">
    <p class="showTitle"><%= link_to @product.name, store_product_path(@product)  %></p>
    <div>
      <%= image_tag @product.image, :width => '500' %>
    </div>
    <div class="description">
      <%= @product.description %>
    </div>
    <p class="price">
      Price: $<%= @product.price %>
    </p>
  </section>
